<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Repository</title>

  
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <%- include('partials/header.ejs') %>

    <div class="container">

      <form action="/books/search" method="POST" class="col-12 col-lg-auto mb-3 me-lg-3" _lpchecked="1">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Book Title..." name="title" id="titleInput">
          <button type="submit" class="btn btn-secondary" id="searchButton">Search</button>
        </div>
        <p id="error" style="color: red;"></p> <!-- Mensaje de error de la validaciones de FrontEnd-->
      </form>


      <% if (books.length > 0 ) { %>
          <% books.forEach(book => { %>
            <a href="/books/detail/<%= book.id %>" class="list-group-item list-group-item-action">
              <img class="d-block mx-auto mb-4" src="<%= book.cover %>" alt="" width="172" height="257">
                <h5 class="mb-1"><%= book.title %></h5>

              <p class="mb-1">Authors:
                <% book.authors.forEach((author, index) => { %>
                  <%= `${author.name}${(index === book.authors.length - 1) ? '.' : ', '}` %>
                <% }) %>
              </p>
              <small>Description: <%= book.description %></small>
            </a>
          <% }) %>
        </div>
      <% } else { %>
        <p>No se encontraron resultados.</p>
      <% } %>

      
  </div>
</div>

<script src="/js/search.js"></script>

<%- include('partials/footer.ejs') %>
</body>
</html>